<!-- Forum List -->

    <div class="card mb-2">
        <div class="card-body p-2 p-sm-3">
            <div class="media forum-item">
                <a href="#" data-toggle="collapse" data-target=".forum-content"><img
                        src="https://bootdey.com/img/Content/avatar/avatar1.png" class="mr-3 rounded-circle" width="50"
                        alt="User" /></a>
                <div class="media-body">
                    <h6><a href="#" data-toggle="collapse" data-target=".forum-content" class="text-body">{{title}}</a></h6>
                    <p class="text-secondary">
                        {{post_text}}
                    </p>
                    <p class="text-muted"><a href="javascript:void(0)">{{user.username}}</a> replied <span
                            class="text-secondary font-weight-bold">{{format_date created_at}}</span></p>
                </div>
                <div class="text-muted small text-center align-self-center">
                    <span class="d-none d-sm-inline-block"><i class="far fa-thumbs-up"></i> {{vote_count}}</span>
                    <span><i class="far fa-comment ml-2"></i> {{comments.length}}</span>
                </div>
            </div>
        </div>
    </div>
<!-- /Forum List -->
