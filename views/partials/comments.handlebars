<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
      {{cvote_count}} {{format_plural "point" cvote_count}}

      <button type="button" class="cupvote-btn" id={{id}}>upvote comment</button>
    </div>
    <div class="tags">
      {{tag.tag_text}}
    </div>
  </section>
  {{/each}}
</div>

<script src="/javascript/comment-upvote.js"></script>